---
import Section from "../Section.astro";
import {skills} from "@cv";

---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({name})=>(
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style> 
  UL {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  li {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>